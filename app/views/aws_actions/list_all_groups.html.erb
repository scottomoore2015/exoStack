<% if @groups.blank? %>
    <div class='well'>
      <center>No instances found</center>
    </div>
<% else %>
    <table id="table_bug_report" class="table table-striped table-bordered table-hover table-condensed">
      <thead>
      <tr>
        <th>Select the Group for member</th>
      </tr>
      </thead>

      <tbody>
      <% @groups.each do |group| %>
          <tr>
            <td>
              <div class="control-group">
                <div class="controls">
                  <input  id="instances_list" type="radio" name="user[group_name]" value="<%= group.name %>" required = true />
                  <label for="instance[instance_id][]" class="lbl"></label> <%= group.name %>
                </div>
              </div>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
<% end %>