<table class="table table-striped table-bordered table-hover table-condensed">
		<thead>
			<tr>
				<th class="center">Instance ID</th>
				<th class="center">Instance state</th>
				<th class="center">Instance type</th>
				<th class="center">Private DNS</th>
				<th class="center">Private IPs</th>
				<th class="center">VPC ID</th>
				<th class="center">Subnet ID</th>
				<th class="center">Network interfaces</th>
				<th class="center">Source/dest. check</th>
				<th class="center">EBS-optimized</th>
				<th class="center">Root device type</th>
                <th class="center">Block devices</th>

			</tr>
		</thead>
	
		<tbody>
		<% @instance.each do |instance| %>
				<tr>
					<td><%=instance.instance_id %></td>					
					<td><%=instance.instance_state.name %></td>	 
					<td><%=instance.instance_type %></td>	 
					<td><%=instance.private_dns_name %></td>	 
					<td><%=instance.private_ip_address %></td>	 
					<td><%=instance.vpc_id %></td>					
					<td><%=instance.subnet_id %></td>	 
					<td><%=instance.network_interface_set.first.network_interface_id %></td>	 
		            <td><%=instance.source_dest_check %></td>
		            <td><%=instance.ebs_optimized %></td>
		            <td><%=instance.root_device_type %></td>
		            <td><%=instance.root_device_name %></td>
				
				</tr>
			<% end %>
				
		</tbody>
	</table>